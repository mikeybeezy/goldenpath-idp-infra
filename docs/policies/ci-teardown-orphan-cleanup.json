{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "TagDiscovery",
      "Effect": "Allow",
      "Action": [
        "tag:GetResources"
      ],
      "Resource": "*"
    },
    {
      "Sid": "ReadOnlyDiscovery",
      "Effect": "Allow",
      "Action": [
        "eks:ListClusters",
        "eks:ListNodegroups",
        "eks:DescribeCluster",
        "elasticloadbalancing:DescribeLoadBalancers",
        "ec2:DescribeInstances",
        "ec2:DescribeNatGateways",
        "ec2:DescribeAddresses",
        "ec2:DescribeRouteTables",
        "ec2:DescribeSubnets",
        "ec2:DescribeSecurityGroups",
        "ec2:DescribeInternetGateways",
        "ec2:DescribeVpcs"
      ],
      "Resource": "*"
    },
    {
      "Sid": "EKSOrphanCleanup",
      "Effect": "Allow",
      "Action": [
        "eks:DeleteNodegroup",
        "eks:DeleteCluster"
      ],
      "Resource": "*",
      "Condition": {
        "StringLike": {
          "aws:ResourceTag/BuildId": "*",
          "aws:ResourceTag/Environment": "*"
        }
      }
    },
    {
      "Sid": "ELBOrphanCleanup",
      "Effect": "Allow",
      "Action": [
        "elasticloadbalancing:DeleteLoadBalancer"
      ],
      "Resource": "*",
      "Condition": {
        "StringLike": {
          "aws:ResourceTag/BuildId": "*",
          "aws:ResourceTag/Environment": "*"
        }
      }
    },
    {
      "Sid": "EC2OrphanCleanup",
      "Effect": "Allow",
      "Action": [
        "ec2:TerminateInstances",
        "ec2:DeleteNatGateway",
        "ec2:ReleaseAddress",
        "ec2:DeleteRouteTable",
        "ec2:DeleteSubnet",
        "ec2:DeleteSecurityGroup",
        "ec2:DetachInternetGateway",
        "ec2:DeleteInternetGateway",
        "ec2:DeleteVpc"
      ],
      "Resource": "*",
      "Condition": {
        "StringLike": {
          "aws:ResourceTag/BuildId": "*",
          "aws:ResourceTag/Environment": "*"
        }
      }
    }
  ]
}
